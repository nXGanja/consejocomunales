<openerp>
    <data>
       <record model="ir.ui.view" id="view_tcc_sectores_form">
            <field name="name">Sectores</field>
            <field name="model">tcc.sectores</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Registro">
                    <group>
                        <field name="nombre"/>
                        <field name="active"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_tcc_sectores_tree">
            <field name="name">Sectores</field>
            <field name="model">tcc.sectores</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="sector">
                    <field name="nombre"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_tcc_sectores">
            <field name="name">Sector</field>
            <field name="res_model">tcc.sectores</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</openerp>